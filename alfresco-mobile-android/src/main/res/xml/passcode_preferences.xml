<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/passcode_preference" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/passcode_enable_key"
            android:title="@string/passcode_enable_title" />

        <Preference
            android:dependency="@string/passcode_enable_key"
            android:key="@string/passcode_change"
            android:title="@string/passcode_change" />

        <ListPreference
            android:defaultValue="300000"
            android:dependency="@string/passcode_enable_key"
            android:dialogTitle="@string/passcode_timeout_title"
            android:entries="@array/passcode_timeout_entries"
            android:entryValues="@array/passcode_timeout_values"
            android:key="@string/passcode_timeout"
            android:title="@string/passcode_timeout" />

        <CheckBoxPreference
            android:dependency="@string/passcode_enable_key"
            android:key="@string/passcode_erase_data"
            android:summary="@string/passcode_erase_data_summary"
            android:title="@string/passcode_erase_data" />
    </PreferenceCategory>

</PreferenceScreen>