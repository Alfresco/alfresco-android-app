<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_account_name_title"
            style="@style/AlfrescoMaterialTheme.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_background"
            android:padding="@dimen/d_16"
            android:text="@string/settings_userinfo"
            android:textColor="@color/secondary_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical" />

        <!-- ######################################################################### -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings_account_name_container"
                style="@style/AlfrescoMaterialTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_account_name"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- ######################################################################### -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings_account_info_container"
                style="@style/AlfrescoMaterialTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_account_info"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="?android:attr/dividerVertical" />

        <!-- ######################################################################### -->

        <!-- Customization Settings !-->
        <TextView
            style="@style/AlfrescoMaterialTheme.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d_16"
            android:text="@string/settings_custom_menu"
            android:textColor="@color/secondary_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="?android:attr/dividerVertical" />

        <LinearLayout
            android:id="@+id/settings_custom_menu_manage_container"
            style="@style/AlfrescoMaterialTheme.Button.BorderLess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background">

            <include
                android:id="@+id/settings_custom_menu_manage"
                layout="@layout/row_two_lines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical" />

        <!-- Sync Settings Content (added programmatically) !-->
        <LinearLayout
            android:id="@+id/settings_sync_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sync Settings !-->
            <TextView
                style="@style/AlfrescoMaterialTheme.Text.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d_16"
                android:text="@string/settings_synced_content"
                android:textColor="@color/secondary_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="?android:attr/dividerVertical" />


            <LinearLayout
                android:id="@+id/favorite_sync_wifi_container"
                style="@style/AlfrescoMaterialTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_background">

                <include
                    android:id="@+id/favorite_sync_wifi"
                    layout="@layout/row_two_lines_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical" />

    </LinearLayout>
</ScrollView>