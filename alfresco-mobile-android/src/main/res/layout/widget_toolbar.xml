<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/appwidget_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quickaction_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_default_holo_light"
            android:drawableLeft="@drawable/ic_application_logo"
            android:gravity="left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey_lighter" />

            <ImageButton
                android:id="@+id/quickaction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_default_holo_light"
                android:src="@drawable/ic_doc_light" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey_lighter" />

            <ImageButton
                android:id="@+id/quickaction_voicetotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_default_holo_light"
                android:src="@drawable/ic_microphone" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey_lighter" />

            <ImageButton
                android:id="@+id/quickaction_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_default_holo_light"
                android:src="@drawable/ic_camera" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>