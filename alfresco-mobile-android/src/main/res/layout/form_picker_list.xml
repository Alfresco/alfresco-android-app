<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:paddingLeft="@dimen/properties_padding"
    android:paddingRight="@dimen/properties_padding" >

    <LinearLayout
        android:id="@+id/picker_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="4dip"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/action_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_round_simple" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        style="?MainTheme.TextView.SectionHeader.Primary"
        android:layout_marginBottom="4dip"
        android:paddingLeft="0dip" />

    <include
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        layout="@layout/sdk_list" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="4dip"
        android:background="?android:attr/dividerVertical" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/app_validation_button" />

</LinearLayout>