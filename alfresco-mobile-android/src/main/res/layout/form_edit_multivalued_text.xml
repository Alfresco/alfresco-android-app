<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:floatlabel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <org.alfresco.mobile.android.application.ui.form.views.EditTextFieldView
        android:id="@+id/property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        floatlabel:floatTextSize="12sp"
        floatlabel:textColorHintError="@color/field_error"
        floatlabel:textColorHintFocused="@android:color/holo_blue_dark"
        floatlabel:textColorHintUnFocused="@android:color/darker_gray"
        floatlabel:textSize="16sp" />
    
      <Button
            android:id="@+id/action_add_value"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add..."
            android:background="@drawable/btn_round_simple" />

</LinearLayout>