<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_background"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_title"
                style="@style/AlfrescoMaterialTheme.Text.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d_8"
                android:gravity="center"
                android:maxLines="10"
                android:textColor="@color/secondary_text"
                tools:text="@string/error_general" />

            <TextView
                android:id="@+id/info_first"
                style="@style/AlfrescoMaterialTheme.Text.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d_8"
                android:gravity="center"
                android:maxLines="10"
                android:textColor="@color/secondary_text"
                tools:text="@string/error_general" />

            <ImageView
                android:id="@+id/info_central_image"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:src="@drawable/ic_sync_focus"
                android:visibility="gone" />

            <TextView
                android:id="@+id/info_second"
                style="@style/AlfrescoMaterialTheme.Text.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d_8"
                android:gravity="center"
                android:maxLines="10"
                android:textColor="@color/secondary_text"
                tools:text="@string/error_general" />

        </LinearLayout>

        <ImageView
            android:id="@+id/info_bottom_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="bottom"
            android:src="@drawable/ic_sync_screenshot_cropped" />

    </LinearLayout>
</ScrollView>