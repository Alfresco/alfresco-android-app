<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?MainTheme.Background.White"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/wizard_main_margin"
        android:layout_marginRight="@dimen/wizard_main_margin"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/group_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    style="?MainTheme.TextView.Primary.Task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="Review this task" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/app_task_header" />
            </LinearLayout>

            <!-- ATTACHMENTS -->

            <LinearLayout
                android:id="@+id/attachments_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="?MainTheme.TextView.SectionHeader.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wizard_main_margin"
                    android:text="@string/process_attachments"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/attachments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/attachments_waiting"
                        style="?MainTheme.Progress"
                        android:layout_margin="@dimen/margin_large" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- INCLUDE FORM -->

    <LinearLayout
        android:id="@+id/complete_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wizard_main_margin"
        android:layout_marginRight="@dimen/wizard_main_margin"
        android:orientation="vertical">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/app_task_complete" />
    </LinearLayout>

</LinearLayout>