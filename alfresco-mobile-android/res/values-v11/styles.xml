<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="alfrescotheme" parent="android:Theme.Holo.Light">
        <item name="android:tabWidgetStyle">@style/alfrescotheme.TabWidget</item>
        <item name="android:actionBarStyle">@style/alfrescotheme_ActionBar</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
    </style>

    <style name="alfrescotheme.TabWidget" parent="android:Widget.Holo.TabWidget">
        <item name="android:textAppearance">@style/alfrescotheme.TextAppearance.Widget.TabWidget</item>
        <item name="android:divider">?android:attr/dividerVertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">8dip</item>
        <item name="android:measureWithLargestChild">true</item>
        <item name="android:minWidth">80dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="alfrescotheme.TextAppearance.Widget.TabWidget" parent="@android:TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@color/tab_indicator_text</item>
        <item name="android:textSize">@dimen/browse_toptext_size</item>
    </style>
    
    <style name="passcode_input">
        <item name="android:textSize">@dimen/passcode_text_size</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">1</item>
    </style>

</resources>
