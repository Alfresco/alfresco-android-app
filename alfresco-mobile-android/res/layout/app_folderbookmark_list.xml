<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/tools_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/properties_details_padding"
        android:paddingRight="@dimen/properties_details_padding"
        android:paddingTop="2dip"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/toolbutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/button_padding"
            android:src="@drawable/ic_about_light"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/folderspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/folderpath_margin"
            android:layout_weight="0"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/toolbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/folderspinner"
            android:layout_weight="0"
            android:paddingLeft="@dimen/button_padding"
            android:paddingRight="@dimen/button_padding"
            android:src="@drawable/ic_about_light"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/toolbutton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/toolbutton2"
            android:layout_weight="0"
            android:paddingRight="@dimen/button_padding"
            android:src="@drawable/ic_about_light"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/toolbutton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/toolbutton3"
            android:layout_weight="0"
            android:paddingRight="@dimen/button_padding"
            android:src="@drawable/ic_about_light"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/toolbutton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/toolbutton4"
            android:layout_weight="0"
            android:paddingRight="@dimen/button_padding"
            android:src="@drawable/ic_about_light"
            android:visibility="gone" />

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/pathTextScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/path_topbottom_margin"
        android:layout_marginLeft="@dimen/path_leftright_margin"
        android:layout_marginRight="@dimen/path_leftright_margin"
        android:layout_marginTop="@dimen/path_topbottom_margin"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="40dip"
        android:requiresFadingEdge="horizontal"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pathText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="right"
                android:lines="@integer/max_path_lines"
                android:scrollHorizontally="true"
                android:text="/"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/emphasis"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="true" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/progressbar"
            style="@android:style/Widget.ProgressBar.Large.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminate="true"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="@dimen/padding_dialog"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/browse_icons"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/empty_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_empty" />

            <TextView
                android:id="@+id/empty_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>