<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
         >

        <TableLayout
            android:id="@+id/default_server"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:shrinkColumns="1"
            android:stretchColumns="1" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/icon"
                    style="@style/list_item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/thumbnail_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/mime_file" />

                <LinearLayout
                    android:id="@+id/group_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/title"
                        style="@style/list_item_toptext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Green Grass.JPG" />

                    <TextView
                        android:id="@+id/details"
                        style="@style/list_item_bottomtext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="G419 days ago - 142Kb, version 1.0" />

                    <TextView
                        android:id="@+id/description"
                        style="@style/list_item_bottomtext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="Lorem ipsum ez azejmflkja zekmlfj azlkefj mlkzafej mlkzaje fmlkzaje lmkjr azklerj zaklejf miezajfmoiejzafmkaejzf mzioejf mzioejf" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/action_openin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/action_open" />

                <LinearLayout
                    android:id="@+id/group_actions"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/action_like"
                        android:src="@drawable/ic_unlike" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/action_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/action_like"
                    android:src="@drawable/ic_share" />
            </TableRow>
        </TableLayout>

        <include layout="@layout/app_details_extra" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
    </LinearLayout>