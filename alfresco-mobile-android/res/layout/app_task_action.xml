<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_pane"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="visible" >

     <LinearLayout
            android:id="@+id/group_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wizard_main_margin"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="4dip"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/title"
                        style="@style/list_item_toptext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="0dp"
                        android:paddingLeft="0dip"
                        android:paddingRight="@dimen/properties_details_padding"
                        android:text="Review this presentation." />

                    <TextView
                        android:id="@+id/details"
                        style="@style/list_item_bottomtext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dip"
                        android:paddingLeft="0dip"
                        android:text="Medium priority - Review - Due Date" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    
         <TextView
            style="@style/sectionHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wizard_main_margin"
            android:text="@string/process_initiator"
            android:visibility="visible" />
    
    <LinearLayout
        android:id="@+id/initiator_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wizard_main_margin"
        android:background="@drawable/btn_search_dialog_voice_default"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/initiator_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/initiatorIcon"
                style="@style/list_item_icon"
                android:contentDescription="@string/thumbnail"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/initiator_name"
                    style="@style/list_item_toptext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Jean Marie PASCAL" />

                <TextView
                    android:id="@+id/initiator_description"
                    style="@style/list_item_bottomtext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/initiatorIcon"
                style="@style/list_item_icon"
                android:background="@drawable/quickcontact_badge_overlay_light"
                android:contentDescription="@string/thumbnail" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/sectionHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wizard_main_margin"
        android:text="Documents"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/initiator_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wizard_main_margin"
        android:background="@drawable/btn_search_dialog_voice_default"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/sdk_list_row" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/sdk_list_row" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/sdk_list_row" />
    </LinearLayout>

    <TextView
        style="@style/sectionHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wizard_main_margin"
        android:text="@string/task_response"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wizard_main_margin"
        android:background="@drawable/btn_search_dialog_voice_default"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/task_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:hint="Add your comment"
            android:inputType="textMultiLine"
            android:lines="6"
            android:maxLines="10"
            android:minLines="1"
            android:scrollbars="vertical" >
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="@dimen/margin_top"
            android:background="?android:attr/dividerVertical" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:measureWithLargestChild="true"
            android:orientation="horizontal"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:paddingTop="0dip" >

            <Button
                android:id="@+id/action_reject"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_cancel"
                android:text="@string/task_reject" />

            <Button
                android:id="@+id/action_approve"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_validate"
                android:text="@string/task_approve" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

</LinearLayout>