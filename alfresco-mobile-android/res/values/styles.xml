<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="alfrescotheme" parent="android:Theme.Holo.Light">
    </style>

    <!-- =============================================================== -->
    <!-- COLOR -->
    <!-- =============================================================== -->
    <color name="actionbar_grey_top">#A4A4A4</color>
    <color name="actionbar_grey_bottom">#757575</color>
    <color name="emphasis">#31b6e7</color>
    <color name="grey_darker">#2F3231</color>
    <color name="grey_dark">#3F4241</color>
    <color name="grey_light">#8C8E8D</color>
    <color name="grey_text">#818282</color>
    <color name="grey_underline">#535554</color>
    
    <!-- =============================================================== -->
    <!-- STYLE -->
    <!-- =============================================================== -->
    <style name="list_item_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">@dimen/browse_margin</item>
        <item name="android:layout_height">@dimen/browse_icons</item>
        <item name="android:layout_width">@dimen/browse_icons</item>
    </style>

    <style name="list_item_toptext">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/browse_margin</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/browse_toptext_size</item>
    </style>

    <style name="list_item_bottomtext">
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_marginLeft">@dimen/browse_margin</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textSize">@dimen/browse_bottomtext_size</item>
    </style>

    <style name="list_item_activities">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/browse_margin</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">@dimen/browse_toptext_size</item>
    </style>
    
    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="slidingmenu_sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/grey_section_header</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    
     <style name="slidingmenu_actionitem" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/actionitem_section_header</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
     <color name="grey_lighter">#eeeeee</color>
    
</resources>
