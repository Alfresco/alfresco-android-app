<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="field_error">#F44336</color>

    <declare-styleable name="FloatLabelEditText">
        <attr name="fitScreenWidth" format="enum">
            <enum name="full" value="1" />
            <enum name="half" value="2" />
        </attr>
        <attr name="gravity" format="enum">
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="center" value="17" />
        </attr>
        <attr name="hint" format="string" />
        <attr name="inputType" format="enum">
            <enum name="normal" value="0" />
            <enum name="textPassword" value="1" />
        </attr>
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColorHintFocused" format="color" />
        <attr name="textColorHintUnFocused" format="color" />
        <attr name="textColorHintError" format="color" />
        <attr name="floatTextSize" format="dimension" />
    </declare-styleable>
</resources>