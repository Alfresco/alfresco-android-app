<resources>

    <!-- =============================================================== -->
    <!-- THEME -->
    <!-- =============================================================== -->
    <style name="__AlfrescoMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/alfrescohololight_list_selector_holo_light
        </item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/alfrescohololight_activated_background_holo_light
        </item>
    </style>


    <style name="_AlfrescoMaterialTheme" parent="__AlfrescoMaterialTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <!-- FIXME Need Refactoring after moving to Material -->
    <style name="AlfrescoMaterialTheme" parent="@style/_AlfrescoMaterialTheme">
        <item name="MainTheme">@style/AlfrescoHoloTheme</item>
        <item name="android:actionBarStyle">@style/AlfrescoHoloTheme.ActionBar</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="MainTheme.ActionBar.Primary">@style/AlfrescoHoloTheme.ActionBar.Primary</item>
        <item name="MainTheme.ActionBar.Secondary">@style/AlfrescoHoloTheme.ActionBar.Secondary
        </item>
        <item name="MainTheme.Background">@style/AlfrescoHoloTheme.Background</item>
        <item name="MainTheme.Background.White">@style/AlfrescoHoloTheme.Background.White</item>
        <item name="MainTheme.Background.Logo">@style/AlfrescoHoloTheme.Background.Logo</item>
        <item name="MainTheme.Background.Light">@style/AlfrescoHoloTheme.Background.Light</item>
        <item name="MainTheme.Background.GreyGradient">
            @style/AlfrescoHoloTheme.Background.GreyGradient
        </item>
        <item name="MainTheme.Button">@style/AlfrescoHoloTheme.Button</item>
        <item name="MainTheme.Button.Large">@style/AlfrescoHoloTheme.Button.Large</item>
        <item name="MainTheme.TextView">@style/AlfrescoHoloTheme.TextView</item>
        <item name="MainTheme.TextView.Primary">@style/AlfrescoHoloTheme.TextView.Primary</item>
        <item name="MainTheme.TextView.Primary.Task">
            @style/AlfrescoHoloTheme.TextView.Primary.Task
        </item>
        <item name="MainTheme.TextView.Secondary">@style/AlfrescoHoloTheme.TextView.Secondary</item>
        <item name="MainTheme.TextView.SecondaryBold">
            @style/AlfrescoHoloTheme.TextView.SecondaryBold
        </item>
        <item name="MainTheme.TextView.ListItem">@style/AlfrescoHoloTheme.TextView.ListItem</item>
        <item name="MainTheme.TextView.ListItem.Primary">
            @style/AlfrescoHoloTheme.TextView.ListItem.Primary
        </item>
        <item name="MainTheme.TextView.ListItem.Secondary">
            @style/AlfrescoHoloTheme.TextView.ListItem.Secondary
        </item>
        <item name="MainTheme.TextView.GridItem">@style/AlfrescoHoloTheme.TextView.GridItem</item>
        <item name="MainTheme.TextView.GridItem.Primary">
            @style/AlfrescoHoloTheme.TextView.GridItem.Primary
        </item>
        <item name="MainTheme.TextView.GridItem.Secondary">
            @style/AlfrescoHoloTheme.TextView.GridItem.Secondary
        </item>
        <item name="MainTheme.TextView.SearchHeader">
            @style/AlfrescoHoloTheme.TextView.SearchHeader
        </item>
        <item name="MainTheme.TextView.SectionHeader">
            @style/AlfrescoHoloTheme.TextView.SectionHeader
        </item>
        <item name="MainTheme.TextView.SectionHeader.Grey">
            @style/AlfrescoHoloTheme.TextView.SectionHeader.Grey
        </item>
        <item name="MainTheme.TextView.SectionHeader.Grey.Thin">
            @style/AlfrescoHoloTheme.TextView.SectionHeader.Grey.Thin
        </item>
        <item name="MainTheme.TextView.SectionHeader.Primary">
            @style/AlfrescoHoloTheme.TextView.SectionHeader.Primary
        </item>
        <item name="MainTheme.ImageView">@style/AlfrescoHoloTheme.ImageView</item>
        <item name="MainTheme.ImageView.ActionIcon">@style/AlfrescoHoloTheme.ImageView.ActionIcon
        </item>
        <item name="MainTheme.ImageView.ActionIcon.Fixed">
            @style/AlfrescoHoloTheme.ImageView.ActionIcon.Fixed
        </item>
        <item name="MainTheme.ImageView.Thumbnail">@style/AlfrescoHoloTheme.ImageView.Thumbnail
        </item>
        <item name="MainTheme.ImageView.Thumbnail.Large">
            @style/AlfrescoHoloTheme.ImageView.Thumbnail.Large
        </item>
        <item name="MainTheme.PasscodeButton">@style/AlfrescoHoloTheme.PasscodeButton</item>
        <item name="MainTheme.PasscodeInput">@style/AlfrescoHoloTheme.PasscodeInput</item>
        <item name="MainTheme.Progress">@style/AlfrescoHoloTheme.Progress</item>
        <item name="MainTheme.Progress.Horizontal">@style/AlfrescoHoloTheme.Progress.Horizontal
        </item>
        <item name="MainTheme.Dialog">@style/AlfrescoHoloTheme.Dialog</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <!-- =============================================================== -->
    <!-- STYLE -->
    <!-- =============================================================== -->
    <style name="AlfrescoMaterialTheme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AlfrescoMaterialTheme.Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/background_material_light</item>
    </style>

    <!--MAIN MENU -->
    <style name="AlfrescoMaterialTheme.MainMenu">
        <item name="android:paddingLeft">@dimen/d_16</item>
        <item name="android:paddingRight">@dimen/d_16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AlfrescoMaterialTheme.MainMenu.Item">
        <item name="android:minHeight">@dimen/menu_list_item_height</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:drawablePadding">@dimen/d_16</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/alfrescohololight_list_selector_holo_light</item>
    </style>

    <style name="AlfrescoMaterialTheme.MainMenu.SubTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:drawableBottom">@drawable/grey_section_header</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/subtitle</item>
    </style>

    <!--BUTTON -->
    <style name="AlfrescoMaterialTheme.Button">
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AlfrescoMaterialTheme.Button.BorderLess" parent="AlfrescoMaterialTheme.Button">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/alfrescohololight_list_selector_holo_light</item>
    </style>

    <style name="AlfrescoMaterialTheme.Button.BorderLess.Padding16" parent="AlfrescoMaterialTheme.Button.BorderLess">
        <item name="android:paddingLeft">@dimen/d_16</item>
        <item name="android:paddingRight">@dimen/d_16</item>
    </style>

    <style name="AlfrescoMaterialTheme.Button.BorderLess.NoCaps" parent="AlfrescoMaterialTheme.Button.BorderLess">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlfrescoMaterialTheme.IconContainer">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/d_16</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/alfrescohololight_list_selector_holo_light</item>
    </style>

    <!-- CUSTOM STYLE : TO CLEAN -->
    <style name="AlfrescoMaterialTheme.Icon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">@dimen/d_16</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="AlfrescoMaterialTheme.Icon.Left" parent="AlfrescoMaterialTheme.Icon">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/d_16</item>
    </style>

    <style name="AlfrescoMaterialTheme.Icon.Right" parent="AlfrescoMaterialTheme.Icon">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/d_16</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- TEXT TITLE -->
    <style name="AlfrescoMaterialTheme.Text.Title" parent="AlfrescoMaterialTheme.Text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.Primary" parent="AlfrescoMaterialTheme.Text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.Primary.Details" parent="AlfrescoMaterialTheme.Text.Primary">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.Primary.Drawer" parent="AlfrescoMaterialTheme.Text.Primary">
        <item name="android:padding">@dimen/d_16</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.Secondary" parent="AlfrescoMaterialTheme.Text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.Secondary.Details" parent="AlfrescoMaterialTheme.Text.Secondary">
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:layout_marginLeft">@dimen/d_16</item>
        <item name="android:layout_marginRight">@dimen/d_16</item>
        <item name="android:paddingBottom">@dimen/d_16</item>
        <item name="android:paddingTop">@dimen/d_16</item>
    </style>

    <!-- LIST ITEMS -->
    <style name="AlfrescoMaterialTheme.Text.List">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.List.Primary" parent="AlfrescoMaterialTheme.Text.List">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.List.Primary.Bold" parent="AlfrescoMaterialTheme.Text.List.Primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.List.Primary.Small" parent="AlfrescoMaterialTheme.Text.List.Primary">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.List.Secondary" parent="AlfrescoMaterialTheme.Text.List">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.List.Secondary.Caption" parent="AlfrescoMaterialTheme.Text.List">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.List.Secondary.Bold" parent="AlfrescoMaterialTheme.Text.List.Secondary">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="AlfrescoMaterialTheme.Text.List.Caption" parent="AlfrescoMaterialTheme.Text.List">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/accent_text</item>
    </style>

    <style name="AlfrescoMaterialTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>


    <!-- ACTION BAR -->
    <style name="AlfrescoMaterialTheme.Container" />

    <style name="AlfrescoMaterialTheme.Container.Padding8">
        <item name="android:paddingLeft">@dimen/d_8</item>
        <item name="android:paddingRight">@dimen/d_8</item>
    </style>

    <style name="AlfrescoMaterialTheme.Container.Padding16">
        <item name="android:paddingLeft">@dimen/d_16</item>
        <item name="android:paddingRight">@dimen/d_16</item>
    </style>

    <style name="AlfrescoMaterialTheme.Container.Relative" parent="AlfrescoMaterialTheme.Container">
        <item name="android:layout_marginLeft">@dimen/d_16</item>
        <item name="android:layout_marginRight">@dimen/d_16</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingBottom">@dimen/d_16</item>
        <item name="android:paddingTop">@dimen/d_16</item>
    </style>


    <style name="one_list_progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/d_16</item>
        <item name="android:layout_marginTop">@dimen/d_16</item>
    </style>

    <style name="M.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="bs_numColumns">3</item>
        <item name="bs_dividerColor">@color/primary</item>
    </style>

</resources>
